{% extends 'base.twig' %}

{% block title %} {{  parent() }} - Tunniplaan {% endblock %}

{% block content %}
    <div class='block'>
        <h2>Tunniplaan</h2>
        <p>Vali klass..
        </p>

        <center>
        <div class="btn-group" role="group">
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=10.a">10.a</a>
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=10.b">10.b</a>
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=10.c">10.c</a>
        </div>
        <div class="btn-group" role="group">
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=11.a">11.a</a>
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=11.b">11.b</a>
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=11.c">11.c</a>
        </div>
        <div class="btn-group" role="group">
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=12.a">12.a</a>
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=12.b">12.b</a>
            <a class="btn btn-default" type="button" href="/mnrg/tunniplaan?klass=12.c">12.c</a>
        </div>
        </center>
    </div>

    {% if paevad != '' %}
        <div class="block">
            <center>
                <h1>Klass {{ klass }}</h1>
                {% for p in paevad %}
                    <div class="tunniplaan_taust">
                    <h3>{{ p }}</h3>
                    <table border="0">
                        {% for t in tund %}
                            {% if p == t.paev %}
                                <tr><td>{{ t.tund_nr }}.&nbsp;</td><td>{{ t.tund }} </td><td>&nbsp;{{ t.ruum }}</td></tr>
                            {% endif %}
                        {% endfor %}
                    </table>
                    </div>
                {% endfor %}
            </center>
        </div>
    {% endif %}
{% endblock %}